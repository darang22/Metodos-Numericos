<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metodos para ecuaciones matriciales"
                android:id="@+id/textView3"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="#a95252" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:id="@+id/editText3"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:hint="Entre Matriz" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminacion Gaussiana Sin Pivoteo"
                android:onClick="createEleminaciongaussianasinpivoteo"
                android:id="@+id/button8"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminacion Gaussiana con pivoteo parcial"
                android:onClick="createEliminacionGaussianaconpivoteoparcial"
                android:id="@+id/button9"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminacion Gaussiana con pivoteo total"
                android:onClick="createEliminacionGaussianaconpivoteototal"
                android:id="@+id/button10"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Factorizacion LU con eliminacion Gaussiana sin pivoteo"
                android:onClick="createFactorizacionluconeliminaciongaussianasinpivoteo"
                android:id="@+id/button11"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Factorizacion LU con eliminacion Gaussiana con pivoteo parcial"
                android:onClick="createFactorizacionluconeliminaciongaussianaconpivoteoparcial"
                android:id="@+id/button12"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Factorizacion LU con eliminacion Gaussiana con pivoteo total"
                android:onClick="createFactorizacionluconeliminaciongaussianaconpivoteototal"
                android:id="@+id/button13"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cholesky"
                android:onClick="createCholesky"
                android:id="@+id/button14"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crout"
                android:onClick="createCrout"
                android:id="@+id/button15"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DooLittle"
                android:onClick="createDoolittle"
                android:id="@+id/button16"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gauss Seidel"
                android:onClick="createGaussseidel"
                android:id="@+id/button17"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jacobi"
                android:onClick="createJacobi"
                android:id="@+id/button18"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>